.container
  width 300px
  height 200px
  border-radius 10px
  padding 25px
  margin 10px
  position relative
  background-color white
  display flex
  flex-direction column
  justify-content space-between
  background-color color-very-light-gray
  box-shadow: 0px 5px 10px 5px color-grayish-blue
  &__title
    width 100%
    h3
      width 100%
      margin-bottom 10px
      mixin-typo(font-weight-600,font-15,font-poppins, color-very-dark-blue)
    p
      width 100%
      height 100%
      mixin-typo(font-weight-200,12px,font-poppins, color-grayish-blue)
  &__icon
    width: 100%
    height: auto
    display: flex
    align-items: center
    justify-content: flex-end
    img
      width  45px
      height 45px