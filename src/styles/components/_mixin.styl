mixin-box-shadow(x, y, blur, spread, color)
  box-shadow x y blur spread color

calculateRem(size)
	remSize = size / 16px
	return remSize * 1rem

mixin-font-size(size)
	font-size = size
	font-size calculateRem(size)
	line-height calculateRem(size)*1.5

mixin-typo(weight, size, family, color)
    font-weight weight
    font-size size
    font-family family
    color color

mixin-border-color(border-color = none)
    content ""
    position absolute
    border-top-left-radius 0.5em
    border-top-right-radius 0.5em
    left 0
    right 0
    top 0
    bottom 0
    width 100%
    height 7px
    border-top 7px solid border-color


